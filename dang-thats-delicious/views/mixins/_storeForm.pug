mixin storeForm(store = {})
  //- Next line commented
  //- p IT works! #{store.name}
  form(action=`/add/${store._id || ''}` method="POST" enctpye="multipart/form-data" class="card")
    label(for="name") Name
    input(type="type" name="name" value=store.name)
    label(for="description") Description
    textarea(name="description")= store.description
    - const choices = ['wifi', 'open late', 'family friendly', 'vegtarian', 'licensed']

    //-  get the store tags or initialise an empty array - so we can use array methods
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save ->" class="button")
